generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Projects {
  id           String  @id @default(uuid())
  project_name String
  image_url    String
  description  String
  repository   String
  preview_link String
  Techs        Techs[]

  @@map("projects")
}

model Techs {
  id   String @id @default(uuid())
  name String

  projects    Projects @relation(fields: [projects_id], references: [id])
  projects_id String

  @@map("techs")
}
